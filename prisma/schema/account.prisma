model People {
    id        String     @id @default(cuid())
    email     String     @unique
    firstName String
    lastName  String
    number    String
    address   Address?   @relation(fields: [addressId], references: [id])
    addressId String?
    User      User?
    Assignees Assignees?
    Clients   Clients?
}

model User {
    id             String       @id @default(cuid())
    person         People       @relation(fields: [peopleId], references: [id])
    peopleId       String       @unique
    settings       UserSettings @relation(fields: [userSettingsId], references: [id])
    userSettingsId String       @unique
    Admins         Admins?
    // msgBox         MsgBoxes
}

model Admins {
    id             String    @id @default(cuid())
    user           User      @relation(fields: [userId], references: [id])
    userId         String    @unique
    role           Roles     @relation(fields: [roleId], references: [id])
    roleId         String
    studies        Studies[] @relation("cdp")
    auditedStudies Studies[] @relation("auditor")
}

model Roles {
    id     String   @id @default(cuid())
    name   String   @unique
    pages  Pages[]
    Admins Admins[]
}

model Pages {
    id        String  @id @default(cuid())
    url       String
    name      String
    navigable Boolean
    Role      Roles   @relation(fields: [roleId], references: [id])
    roleId    String
}

model UserSettings {
    id       String   @id @default(cuid())
    theme    String
    notifLvl NotifLvl
    gui      Boolean
    User     User?
}

enum NotifLvl {
    LOW
    MEDIUM
    HIGH
}

model Address {
    id      String     @id @default(cuid())
    number  String
    street  String
    city    String
    zipCode String
    country String
    People  People[]
    Company Companies?
}
